<Window x:Class="POS.Client.V.V_Dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POS.Client.V"
        mc:Ignorable="d"
        Height="300" Width="300"
        Title="{Binding Title}"
		>
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto"/>
			<RowDefinition/>
			<RowDefinition Height="auto"/>
		</Grid.RowDefinitions>

		<Border BorderBrush="Blue" BorderThickness="0, 2" Grid.Row="1">
			<ContentControl Content="{Binding Content}" Name="V_Dialog_Content"/>
		</Border>

		<Grid Grid.Row="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<Grid.Resources>
				<Style TargetType="{x:Type Button}" BasedOn="{StaticResource cmd_h}">
					<Setter Property="Margin" Value="3"/>
					<Setter Property="HorizontalAlignment" Value="Center"/>
				</Style>
			</Grid.Resources>

			<Button Grid.Column="0" Command="Close" Content="{StaticResource img_Cancel}" IsCancel="True"/>
			<Button Grid.Column="1" Command="Save" Content="{StaticResource img_Save}"/>
		</Grid>
	</Grid>
</Window>
