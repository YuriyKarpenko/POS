             xmlns:dto="clr-namespace:POS.Data.Model;assembly=POS.Data.Model"
             xmlns:v="clr-namespace:POS.Client.V" 
             xmlns:vm="clr-namespace:POS.Client.VM" 
             mc:Ignorable="d" 
             d:DesignHeight="301" d:DesignWidth="800">
	<!--		
	-->
	<UserControl.Resources>		

		<!--	DicTemplate	-->
